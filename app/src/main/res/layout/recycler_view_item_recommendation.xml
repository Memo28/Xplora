<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/roundcorner"
    android:layout_margin="5dp"
    android:paddingLeft="10dp"
    android:layout_height="120dp">

    <ImageView
        android:src="@drawable/camera_profile"
        android:id="@+id/imageView_List_Place"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/text_view_List_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="136dp"
        android:layout_marginBottom="10dp"
        android:textAppearance="?attr/textAppearanceListItem"
        />

    <TextView
        android:maxLines="2"
        android:id="@+id/text_view_List_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_List_Title"
        android:layout_alignLeft="@+id/text_view_List_Title"
        android:layout_alignStart="@+id/text_view_List_Title" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_List_Place"
        android:layout_alignLeft="@+id/text_view_List_city"
        android:layout_alignStart="@+id/text_view_List_city"
        android:layout_marginBottom="10dp">
        <ImageButton
            android:background="@null"
            android:src="@mipmap/ic_thumbs_up"
            android:scaleType="centerCrop"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_marginRight="10dp"
            android:text="21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:background="@null"
            android:src="@mipmap/ic_thumbs_up"
            android:scaleType="centerCrop"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="45dp"
            android:text="@string/more_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>