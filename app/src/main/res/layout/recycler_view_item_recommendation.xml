<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/roundcorner"
    android:layout_margin="5dp"
    android:layout_height="120dp">


    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/imageView_Comment"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/camera_profile"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/text_view_User_Comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_alignTop="@+id/imageView_Comment"
            android:layout_toRightOf="@+id/imageView_Comment"
            android:layout_toEndOf="@+id/imageView_Comment" />

        <TextView
            android:maxLines="2"
            android:id="@+id/text_view_Information_Comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_User_Comment"
            android:layout_alignLeft="@+id/text_view_User_Comment"
            android:layout_alignStart="@+id/text_view_User_Comment" />
        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/text_view_Information_Comment"
            android:layout_alignStart="@+id/text_view_Information_Comment">
            <ImageButton
                android:id="@+id/imageButtonLike"
                android:background="@null"
                android:src="@mipmap/ic_thumbs_up"
                android:scaleType="centerCrop"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/textViewLikeComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/imageButtonDislike"
                android:background="@null"
                android:src="@mipmap/ic_thumbs_up"
                android:scaleType="centerCrop"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:paddingLeft="15dp"
                android:id="@+id/textViewDisLikeComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

</RelativeLayout>