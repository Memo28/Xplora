<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/roundcorner"
    android:layout_margin="5dp"
    android:paddingLeft="10dp"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/imageView_Comment"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:maxLines="2"
        android:id="@+id/text_view_User_Comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="136dp"
        android:layout_marginBottom="10dp"
        android:textAppearance="?attr/textAppearanceListItem"
        />

    <TextView
        android:maxLines="2"
        android:id="@+id/text_view_Information_Comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_User_Comment"
        android:layout_alignLeft="@+id/text_view_User_Comment"
        android:layout_alignStart="@+id/text_view_User_Comment" />

    <RatingBar
        android:id="@+id/ratingBar_List_Place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_Information_Comment"
        android:layout_toEndOf="@+id/imageView_Comment"
        android:isIndicator="true"
        android:layout_marginLeft="10dp"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_toRightOf="@+id/imageView_Comment" />

</RelativeLayout>